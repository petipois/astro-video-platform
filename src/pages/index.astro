<Layout>
	{/* Hero Section */}
	<section class="relative overflow-hidden min-h-screen flex items-center bg-gradient-to-br from-gray-900 via-blue-900 to-purple-900">
		<div class="absolute inset-0 bg-black/20 z-10"></div>
		
		{/* Animated Background Elements */}
		<div class="absolute inset-0 overflow-hidden">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
